    "components": {
        "schemas": {
            "Product": {
                "description": "Persisted product resource.",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 42
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Swiss Precision Knife"
                    },
                    "description": {
                        "type": "string",
                        "example": "A minimal tool crafted with surgical precision.",
                        "nullable": true
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 129.99
                    },
                    "stock": {
                        "type": "integer",
                        "format": "int32",
                        "example": 15
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-01T09:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-05T11:30:00Z"
                    }
                },
                "type": "object"
            },
            "ProductInput": {
                "required": [
                    "name",
                    "price",
                    "stock"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Swiss Precision Knife"
                    },
                    "description": {
                        "type": "string",
                        "example": "A minimal tool crafted with surgical precision.",
                        "nullable": true
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 129.99
                    },
                    "stock": {
                        "type": "integer",
                        "format": "int32",
                        "minimum": 0,
                        "example": 15
                    }
                },
                "type": "object"
            },
            "AuthenticatedUser": {
                "description": "Representation of the authenticated user returned by the profile endpoint.",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "example": "Sofia Admin"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "sofia@example.com"
                    },
                    "email_verified_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-10T12:45:12+00:00",
                        "nullable": true
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-01T08:00:00+00:00"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-05T13:37:00+00:00"
                    }
                },
                "type": "object"
            },
            "AdminUser": {
                "description": "Full admin-managed user resource.",
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 7
                    },
                    "name": {
                        "type": "string",
                        "example": "Laura Morales"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "assistant@test.com"
                    },
                    "status_id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "role_id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "person_id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 2
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-04T08:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-08T10:32:00Z"
                    }
                },
                "type": "object"
            },
            "AdminUserInput": {
                "required": [
                    "name",
                    "email",
                    "password",
                    "status_id",
                    "role_id"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Laura Morales"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "example": "assistant@test.com"
                    },
                    "password": {
                        "type": "string",
                        "minLength": 8,
                        "example": "super-secret"
                    },
                    "status_id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "role_id": {
                        "type": "integer",
                        "format": "int32",
                        "example": 1
                    },
                    "person_id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 2,
                        "nullable": true
                    }
                },
                "type": "object"
            }
        },
        "securitySchemes": {
            "sanctum": {
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "Token",
                "description": "Use the auto-login helper or paste a Sanctum token (Bearer <token>)."
            }
        }
    },
    "tags": [
        {
            "name": "Products",
            "description": "Product catalog management endpoints."
        },
        {
            "name": "Admin Users",
            "description": "User administration endpoints (role/status management)."
        },
        {
            "name": "Profile",
            "description": "Profile"
        }
    ],
    "security": [
        {
            "sanctum": []
        }
    ]
}