                        "type": "integer",
                        "format": "int64",
                        "example": 42
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Swiss Precision Knife"
                    },
                    "description": {
                        "type": "string",
                        "example": "A minimal tool crafted with surgical precision.",
                        "nullable": true
                    },
                    "price": {
                        "type": "number",
                        "format": "float",
                        "example": 129.99
                    },
                    "stock": {
                        "type": "integer",
                        "format": "int32",
                        "example": 15
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2025-01-01T09:00:00Z"
                    },
                    "updated_at": {
                        "type": "string",
